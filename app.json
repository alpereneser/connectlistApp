{
  "expo": {
    "name": "ConnectList",
    "slug": "connectlist",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "connectlist",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Discover, create and share curated lists of movies, TV shows, books, games, and places. Connect with others who share your interests and discover new content through personalized recommendations.",
    "primaryColor": "#F97316",
    "backgroundColor": "#FFFFFF",
    "privacy": "public",
    "owner": "alperen_eser",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.connectlist.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to help you find nearby places and enhance your lists.",
        "NSCameraUsageDescription": "This app uses camera to take photos for your lists.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to select images for your lists.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:connectlist.me",
        "applinks:connectlist.me"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.connectlist.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "connectlist.me"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "connectlist"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "css": [
        "./styles/fonts.css"
      ],
      "scripts": []
    },
    "fonts": [
      "https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;500;600;700;800;900&display=swap"
    ],
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "7022670c-764b-4e3a-83ef-765c806f5cf8"
      }
    }
  }
}
